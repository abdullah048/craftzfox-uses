---
import HeaderLink from './HeaderLink.astro'
import { HOMEPAGE_URL } from '../config'
import { IoLogoGithub } from 'react-icons/io5/index.js'
import ProfileIcon from './icons/profile'
import ToggleTheme from './theme-toggle-button'
---

<header class='fixed w-full p-1 z-20 backdrop-blur-md'>
  <div class='mx-auto max-w-3xl'>
    <nav class='flex items-center gap-3 text-base'>
      <a href='/' class='group'
        ><h2
          class='font-semibold tracking-tighter p-2 font-mplus text-lg flex items-center gap-3'
        >
          <ProfileIcon />
          Abdullah Shahbaz
        </h2>
      </a>
      <div class='items-center gap-6 hidden md:flex'>
        <HeaderLink href={HOMEPAGE_URL}>About</HeaderLink>
        <HeaderLink href='https://github.com/withastro/astro' target='_blank'
          ><IoLogoGithub /> Source</HeaderLink
        >
      </div>
      <div class='flex-1'></div>
      <ToggleTheme client:load />
    </nav>
  </div>
</header>
