---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { SITE_TITLE, SITE_DESCRIPTION, HOMEPAGE_URL } from '../config'
import Body from '../components/Body.astro'
import Content from '../components/Content.astro'
import { Image } from '@astrojs/image/components'
import Masthead from '../components/Masthead.astro'
import { IoChevronForward } from 'react-icons/io5/index'
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <Body>
    <Header title={SITE_TITLE} />
    <main class='pt-[56px]'>
      <Masthead />
      <Content>
        <section>
          <h1 class='text-3xl text-center mt-12 mb-8'>Oops, not found.</h1>
          <div class='text-center py-4'>
            <a
              class='inline-flex items-center gap-1 underline underline-offset-2 decoration-purple-500 dark:decoration-teal-500'
              href='/'
              >Go to Homepage<IoChevronForward />
            </a>
          </div>
        </section>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
