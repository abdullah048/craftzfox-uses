---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Body from '../components/Body.astro'
import Content from '../components/Content.astro'

export interface Props {
  content: {
    title: string
    description: string
    createdAt?: string
    updateAt?: string
    heroImage?: string
    tags: string[]
  }
}

const {
  content: { title, description, heroImage }
} = Astro.props
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <Body>
    <Header />
    <main class='pt-[56px]'>
      <Content className='pt-6'>
        <div class='mb-8'>
          {
            heroImage && (
              <img
                class='border border-slate-300 dark:border-zinc-700 rounded-lg'
                width={720}
                height={360}
                src={heroImage}
                alt=''
              />
            )
          }
        </div>
        <h1 class='text-3xl font-mplus my-1'>{title}</h1>
        <div>{description}</div>
        <hr class='border-b border-slate-400 dark:border-zinc-500 mb-3 mt-1' />
        <slot />
        <span
          class='underline underline-offset-2 hover:dark:text-teal-500 decoration-teal-500 text-2xl'
        ></span>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
